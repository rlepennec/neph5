<div class="akasha">

    <div class="column">

        <div class="header">

            <img class="puce"/>

            <img class="separator"/>

            <span class="name">{{localize "NEPH5E.akasha"}}</span>

            <label class="vaisseau {{#if (not actor.system.akasha.nef.active)}}disabled{{/if}}" data-type="nef">{{localize "NEPH5E.nef"}}</label>
            
            <input
                name="actor.system.akasha.nef.active"
                type="hidden"
                value="{{actor.system.akasha.nef.active}}"
                data-dtype="Boolean"/>

        </div>

        <div class="directions">

            <div class="nef tooltip" data-type="nef">
