                <label class="tooltiptext">{{localize "NEPH5E.nef"}}</label>
            </div>

            <div class="zenith">
                <img class="circle"/>
                <input
                    name="system.akasha.boussole.zenith"
                    type="text"
                    value="{{system.akasha.boussole.zenith}}"
                    data-dtype="Number"/>
                <label>Zenith +{{getLevel actor.system.akasha.boussole.zenith}}</label>
            </div>

            <div class="orient">
                <img class="circle"/>
                <input
                    name="system.akasha.boussole.orient"
                    type="text"
