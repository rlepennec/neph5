                    <label for="system.options.theme"><i class="fa-solid"></i> Terre</label>
                </div>

            </fieldset>

        </div>

        <div class="options-group">

            <div class="header">

                <img class="puce"/>

                <img class="separator"/>

                <span class="options-name">{{localize "NEPH5E.affichage"}}</span>

            </div>

            <ol class="body">

                {{> "systems/neph5e/templates/actor/parts/option.hbs" label="NEPH5E.chronologieDescendante" name="system.options.chronologieDescendante" value=system.options.chronologieDescendante}}

