                            name="system.options.incarnationsOuvertes"
                            type="checkbox"
                            class="incarnationsOuvertes"
                            data-dtype="Boolean"/>
                        <i class="far fa-circle unchecked"></i>
                        <i class="fas fa-circle checked"></i>
                    </label>

