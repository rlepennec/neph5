<div class="description">
{{#if (or (nonNull difficulty) (nonNull readOnly))}}

    {{html (enrichHTML system.description owner)}}

{{else}}

    {{#if (isEmptyString system.description)}}
    <div class="add">
        <i class="fa-solid fa-circle-plus fa-2xl"></i>
        <span>{{localize 'NEPH5E.ajouterDescription'}}</span>
    </div>
    {{/if}}

    <div class="no-scrollbar">
        {{editor (enrichHTML system.description owner) target="system.description" button=true owner=owner editable=editable}}
    </div>

{{/if}}
</div>